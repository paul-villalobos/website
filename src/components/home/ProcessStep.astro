---
interface Props {
	number: number;
	title: string;
	description: string;
	colorVariant?: 'primary' | 'secondary' | 'accent';
}

const {
	number,
	title,
	description,
	colorVariant = 'primary',
} = Astro.props;

// Mapeo de colores seg√∫n variante
const colorMap = {
	primary: {
		bg: 'bg-[var(--pv-primary-soft)]',
		text: 'text-primary',
	},
	secondary: {
		bg: 'bg-[var(--pv-secondary-soft)]',
		text: 'text-[var(--pv-secondary-base)]',
	},
	accent: {
		bg: 'bg-[var(--pv-accent-soft)]',
		text: 'text-[var(--pv-accent-base)]',
	},
};

const colors = colorMap[colorVariant];
---

<div class="flex items-start space-x-6">
	<div class={`w-12 h-12 ${colors.bg} rounded-xl flex items-center justify-center shrink-0`}>
		<span class={`text-xl font-bold ${colors.text}`}>{number}</span>
	</div>
	<div class="flex-1">
		<h3 class="text-xl font-semibold text-ink-base mb-2">{title}</h3>
		<p class="text-ink-muted leading-relaxed">{description}</p>
	</div>
</div>

