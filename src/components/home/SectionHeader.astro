---
interface Props {
	title: string;
	subtitle?: string;
	align?: 'left' | 'center';
	class?: string;
}

const {
	title,
	subtitle,
	align = 'center',
	class: className = '',
} = Astro.props;

const alignClasses = {
	left: 'text-left',
	center: 'text-center',
};
---

<div class={`space-y-6 ${alignClasses[align]} ${className}`}>
	<h2 class="text-[1.75rem] sm:text-4xl font-bold text-ink-base">
		{title}
	</h2>
	{subtitle && (
		<p class="text-lg text-ink-muted leading-relaxed">
			{subtitle}
		</p>
	)}
</div>



