---
import type { ProcessedPost } from '../utils/blogUtils';
import Icon from './Icon.astro';

export interface Props {
  post: ProcessedPost;
}

const { post } = Astro.props;
---

<article 
  class="bg-white border border-slate-200 rounded-xl shadow-sm hover:shadow-lg transition-all duration-300 hover:-translate-y-1 overflow-hidden group"
  data-category={post.processedData.filterData.category}
  data-tags={post.processedData.filterData.tags}
  data-title={post.processedData.filterData.title}
  data-description={post.processedData.filterData.description}
>
  <!-- Imagen del post -->
  {post.processedData.hasImage && (
    <div class="aspect-video overflow-hidden">
      <img 
        src={post.processedData.image} 
        alt={post.processedData.imageAlt}
        width="640"
        height="360"
        class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
        loading="lazy"
      />
    </div>
  )}
  
  <!-- Contenido de la tarjeta -->
  <div class="p-6">
    <!-- Categoría -->
    {post.processedData.hasCategory && (
      <div class="mb-3">
        <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
          {post.data.category}
        </span>
      </div>
    )}
    
    <!-- Título -->
    <h2 class="text-xl font-bold text-slate-900 mb-3 group-hover:text-blue-600 transition-colors duration-200">
      <a href={`/posts/${post.slug}`} class="block">
        {post.data.title}
      </a>
    </h2>
    
    <!-- Descripción -->
    <p class="text-slate-600 mb-4 line-clamp-3">
      {post.data.description}
    </p>
    
    <!-- Tags -->
    {post.processedData.hasTags && (
      <div class="flex flex-wrap gap-2 mb-4">
        {post.processedData.visibleTags.map((tag: string) => (
          <span class="inline-flex items-center px-2 py-1 rounded-md text-xs font-medium bg-slate-100 text-slate-700">
            {tag}
          </span>
        ))}
        {post.processedData.remainingTagsCount > 0 && (
          <span class="text-xs text-slate-500">+{post.processedData.remainingTagsCount} más</span>
        )}
      </div>
    )}
    
    <!-- Metadatos -->
    <div class="flex items-center justify-between text-sm text-slate-500">
      <div class="flex items-center">
        <Icon name="calendar" class="w-4 h-4 mr-2" />
        <time datetime={post.data.pubDate}>{post.processedData.formattedDate}</time>
      </div>
      
      <a 
        href={`/posts/${post.slug}`} 
        class="text-blue-600 hover:text-blue-700 font-medium transition-colors duration-200"
      >
        Leer más →
      </a>
    </div>
  </div>
</article>

