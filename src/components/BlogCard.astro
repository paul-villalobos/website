---
import type { ProcessedPost } from '../utils/blogUtils';
import Icon from './Icon.astro';
import { Image } from 'astro:assets';

export interface Props {
  post: ProcessedPost;
}

const { post } = Astro.props;

const title = post.data.title;
const href = `/blog/${post.slug}`;
const excerpt = post.data.description;
const category = post.categoryName;
const date = post.formattedDate;
const imageUrl = post.image;
const imageAlt = post.imageAlt;

// Calcular tags visibles y restantes directamente
const visibleTags = post.data.tags?.slice(0, 3) || [];
const remainingTagsCount = Math.max(0, (post.data.tags?.length || 0) - 3);
const hasTags = post.data.tags && post.data.tags.length > 0;
---

<article 
  data-category={post.data.category}
  data-tags={post.data.tags?.join(',')}
  class="bg-white border border-slate-200 rounded-xl shadow-sm hover:shadow-lg transition-all duration-300 hover:-translate-y-1 overflow-hidden group"
>
  <!-- Imagen del post -->
  {imageUrl && (
    <div class="aspect-video overflow-hidden">
      {typeof imageUrl === 'string' ? (
        <img 
          src={imageUrl} 
          alt={imageAlt}
          width="640"
          height="360"
          class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
          loading="lazy"
        />
      ) : (
        <Image 
          src={imageUrl} 
          alt={imageAlt}
          width={640}
          height={360}
          class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
        />
      )}
    </div>
  )}
  
  <!-- Contenido de la tarjeta -->
  <div class="p-6">
    <!-- Categoría -->
    {category && (
      <div class="mb-3">
        <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-semibold bg-blue-100 text-blue-800">
          {category}
        </span>
      </div>
    )}
    
    <!-- Título -->
    <h2 class="text-xl font-bold text-slate-900 mb-3 group-hover:text-blue-600 transition-colors duration-200">
      <a href={href} class="block">
        {title}
      </a>
    </h2>
    
    <!-- Descripción -->
    <p class="text-slate-600 mb-4 line-clamp-3">
      {excerpt}
    </p>
    
    <!-- Tags -->
    {hasTags && (
      <div class="flex flex-wrap gap-2 mb-4">
        {visibleTags.map((tag: string) => (
          <span class="inline-flex items-center px-2 py-1 rounded-md text-xs font-semibold bg-slate-100 text-slate-700">
            {tag}
          </span>
        ))}
        {remainingTagsCount > 0 && (
          <span class="text-xs text-slate-500">+{remainingTagsCount} más</span>
        )}
      </div>
    )}
    
    <!-- Metadatos -->
    <div class="flex items-center justify-between text-sm text-slate-500">
      {date && (
        <div class="flex items-center">
          <Icon name="calendar" class="w-4 h-4 mr-2" />
          <time>{date}</time>
        </div>
      )}
      
      <a 
        href={href} 
        class="text-blue-600 hover:text-blue-700 font-semibold transition-colors duration-200"
      >
        Leer más →
      </a>
    </div>
  </div>
</article>
