---
export interface Props {
  name: 'calendar' | 'clock' | 'user' | 'tag' | 'chevron';
  class?: string;
}

const { name, class: className = 'w-4 h-4' } = Astro.props;

const icons = {
  calendar: {
    viewBox: '0 0 24 24',
    path: 'M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z',
  },
  clock: {
    viewBox: '0 0 24 24',
    path: 'M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z',
  },
  user: {
    viewBox: '0 0 24 24',
    path: 'M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z',
  },
  tag: {
    viewBox: '0 0 24 24',
    path: 'M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z',
  },
  chevron: {
    viewBox: '0 0 20 20',
    path: 'M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z',
  },
};

const icon = icons[name];
---

<svg class={className} fill="none" stroke="currentColor" viewBox={icon.viewBox}>
  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={icon.path}></path>
</svg>

