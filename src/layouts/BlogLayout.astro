---
import MainLayout from './MainLayout.astro';

import BlogPostMeta from '../components/BlogPostMeta.astro';
import TableOfContents from '../components/TableOfContents.astro';
import type { ProcessedPost } from '../utils/blogUtils';
import { 
  generatePostMeta, 
  generatePostStructuredData,
  generateBreadcrumbs,
  generateBreadcrumbStructuredData,
  combineStructuredData
} from '../utils/blogUtils';

// Props específicas del blog
export interface Props {
  post: ProcessedPost;
  originalPost?: any; // Post original de Astro para acceso a body
  showTOC?: boolean;
  includeBreadcrumbs?: boolean;
}

const {
  post,
  originalPost,
  showTOC = false,
  includeBreadcrumbs = true
} = Astro.props;

// Generar metadatos SEO
const postMeta = generatePostMeta(post);
const postStructuredData = generatePostStructuredData(post);
const breadcrumbs = includeBreadcrumbs ? generateBreadcrumbs(post) : [];
const breadcrumbStructuredData = includeBreadcrumbs ? generateBreadcrumbStructuredData(breadcrumbs) : null;

// Combinar datos estructurados
const combinedStructuredData = combineStructuredData(
  postStructuredData,
  breadcrumbStructuredData
);
---

<MainLayout
  title={postMeta.title}
  description={postMeta.description}
  keywords={postMeta.keywords}
  canonical={postMeta.canonical}
  ogImage={postMeta.ogImage}
  ogType={postMeta.ogType}
  structuredData={combinedStructuredData}
>

  <!-- Contenido principal -->
  <main class="min-h-screen bg-white">
    <div class="max-w-[1200px] mx-auto px-5 py-section">
      <div class="flex flex-col lg:flex-row gap-8">
        
        <!-- Contenido del artículo -->
        <article class="flex-1 max-w-[800px] mx-auto lg:mx-0">
          
          <!-- Header del artículo -->
          <header class="mb-12">
            <!-- Metadatos del post con breadcrumbs -->
            <BlogPostMeta 
              post={post} 
              includeBreadcrumbs={includeBreadcrumbs}
            />
            
            <!-- Título del artículo -->
            <h1 class="text-display font-bold text-ink-base leading-[1.1] tracking-[-0.01em] mb-6">
              {post.data.title}
            </h1>
            
            <!-- Descripción -->
            {post.data.description && (
              <p class="text-[1.125rem] text-ink-muted leading-[1.6] mb-8">
                {post.data.description}
              </p>
            )}
          </header>
          
          <!-- Imagen Hero del Post -->
          {post.data.heroImage && (
            <div class="mb-8 -mx-5 sm:mx-0">
              <img 
                src={typeof post.data.heroImage.src === 'string' ? post.data.heroImage.src : post.data.heroImage.src.src}
                alt={post.data.heroImage.alt}
                width={1200}
                height={630}
                class="w-full h-auto rounded-none sm:rounded-xl object-cover shadow-lg"
                loading="eager"
              />
            </div>
          )}
          
          <!-- Contenido del artículo -->
          <div class="prose prose-lg max-w-none font-serif" id="article-content">
            <slot />
          </div>
          
          <!-- Script para agregar IDs a los headings -->
          <script>
            // Agregar IDs a los headings para navegación del TOC
            document.addEventListener('DOMContentLoaded', () => {
              const articleContent = document.getElementById('article-content');
              if (!articleContent) return;
              
              const headings = articleContent.querySelectorAll('h2, h3');
              headings.forEach((heading) => {
                if (!heading.id) {
                  const text = heading.textContent || '';
                  const id = text
                    .toLowerCase()
                    .normalize('NFD')
                    .replace(/[\u0300-\u036f]/g, '')
                    .replace(/[^a-z0-9]+/g, '-')
                    .replace(/^-+|-+$/g, '');
                  heading.id = id;
                }
              });
            });
          </script>
          
        </article>
        
        <!-- Sidebar para TOC -->
        {showTOC && originalPost && (
          <aside class="hidden lg:block w-64 flex-shrink-0">
            <TableOfContents post={originalPost} minHeadings={3} />
          </aside>
        )}
      </div>
    </div>
  </main>


</MainLayout>

<style>
  /* Estilos específicos para el blog usando variables de global.css */
  .prose {
    color: var(--pv-ink-base);
    line-height: var(--pv-text-body-line);
    font-family: var(--pv-font-serif);
  }
  
  .prose :global(h1),
  .prose :global(h2),
  .prose :global(h3),
  .prose :global(h4),
  .prose :global(h5),
  .prose :global(h6) {
    color: var(--pv-ink-base);
    font-weight: 700;
    margin-top: var(--pv-spacing-2xl);
    margin-bottom: var(--pv-spacing-lg);
  }
  
  .prose :global(h1) {
    font-size: var(--pv-text-h1-size);
    line-height: var(--pv-text-h1-line);
    letter-spacing: var(--pv-text-h1-tracking);
  }
  
  .prose :global(h2) {
    font-size: var(--pv-text-h2-size);
    line-height: var(--pv-text-h2-line);
    font-weight: var(--pv-text-h2-weight);
  }
  
  .prose :global(h3) {
    font-size: var(--pv-text-h3-size);
    line-height: var(--pv-text-h3-line);
    font-weight: var(--pv-text-h3-weight);
  }
  
  .prose :global(p) {
    margin-bottom: var(--pv-spacing-2xl);
    color: var(--pv-ink-muted);
    font-size: var(--pv-text-body-size);
    line-height: var(--pv-text-body-line);
  }
  
  .prose :global(a) {
    color: var(--pv-primary-base);
    text-decoration: none;
    transition: color 200ms cubic-bezier(0, 0, 0.2, 1);
  }
  
  .prose :global(a:hover) {
    color: var(--pv-primary-hover);
    text-decoration: underline;
    text-underline-offset: 2px;
  }
  
  .prose :global(blockquote) {
    border-left: 4px solid var(--pv-primary-base);
    padding-left: var(--pv-spacing-3xl);
    margin: var(--pv-spacing-2xl) 0;
    font-style: italic;
    color: var(--pv-ink-muted);
  }
  
  .prose :global(code) {
    background-color: var(--pv-bg-alt);
    padding: 0.25rem 0.5rem;
    border-radius: var(--pv-radius-sm);
    font-family: var(--pv-font-mono);
    font-size: 0.875rem;
  }
  
  .prose :global(pre) {
    background-color: var(--pv-bg-alt);
    padding: var(--pv-spacing-3xl);
    border-radius: var(--pv-radius-md);
    overflow-x: auto;
    margin: var(--pv-spacing-2xl) 0;
  }
  
  .prose :global(pre code) {
    background: none;
    padding: 0;
  }
  
  .prose :global(ul),
  .prose :global(ol) {
    margin: var(--pv-spacing-2xl) 0;
    padding-left: var(--pv-spacing-2xl);
  }
  
  .prose :global(li) {
    margin-bottom: var(--pv-spacing-sm);
    color: var(--pv-ink-muted);
  }
  
  .prose :global(img) {
    border-radius: var(--pv-radius-lg);
    box-shadow: var(--pv-shadow-card);
    margin: var(--pv-spacing-2xl) 0;
  }
  
  .prose :global(table) {
    width: 100%;
    border-collapse: collapse;
    margin: var(--pv-spacing-2xl) 0;
  }
  
  .prose :global(th),
  .prose :global(td) {
    border: 1px solid var(--pv-border-light);
    padding: 0.75rem;
    text-align: left;
  }
  
  .prose :global(th) {
    background-color: var(--pv-bg-alt);
    font-weight: 600;
  }
</style>
