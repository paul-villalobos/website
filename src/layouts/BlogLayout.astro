---
import MainLayout from './MainLayout.astro';
import Design from '../../Design.json';
import BlogPostMeta from '../components/BlogPostMeta.astro';
import TableOfContents from '../components/TableOfContents.astro';
import type { ProcessedPost } from '../utils/blogUtils';
import { 
  generatePostMeta, 
  generatePostStructuredData,
  generateBreadcrumbs,
  generateBreadcrumbStructuredData,
  combineStructuredData
} from '../utils/blogUtils';

// Props específicas del blog
export interface Props {
  post: ProcessedPost;
  originalPost?: any; // Post original de Astro para acceso a body
  showTOC?: boolean;
  includeBreadcrumbs?: boolean;
}

const {
  post,
  originalPost,
  showTOC = false,
  includeBreadcrumbs = true
} = Astro.props;

// Generar metadatos SEO
const postMeta = generatePostMeta(post);
const postStructuredData = generatePostStructuredData(post);
const breadcrumbs = includeBreadcrumbs ? generateBreadcrumbs(post) : [];
const breadcrumbStructuredData = includeBreadcrumbs ? generateBreadcrumbStructuredData(breadcrumbs) : null;

// Combinar datos estructurados
const combinedStructuredData = combineStructuredData(
  postStructuredData,
  breadcrumbStructuredData
);
---

<MainLayout
  title={postMeta.title}
  description={postMeta.description}
  keywords={postMeta.keywords}
  canonical={postMeta.canonical}
  ogImage={postMeta.ogImage}
  ogType={postMeta.ogType}
  structuredData={combinedStructuredData}
>

  <!-- Contenido principal -->
  <main class="min-h-screen bg-white">
    <div class="max-w-[1200px] mx-auto px-5 py-section">
      <div class="flex flex-col lg:flex-row gap-8">
        
        <!-- Contenido del artículo -->
        <article class="flex-1 max-w-[800px] mx-auto lg:mx-0">
          
          <!-- Header del artículo -->
          <header class="mb-12">
            <!-- Metadatos del post con breadcrumbs -->
            <BlogPostMeta 
              post={post} 
              includeBreadcrumbs={includeBreadcrumbs}
            />
            
            <!-- Título del artículo -->
            <h1 class="text-display font-bold text-ink-base leading-[1.1] tracking-[-0.01em] mb-6">
              {post.data.title}
            </h1>
            
            <!-- Descripción -->
            {post.data.description && (
              <p class="text-[1.125rem] text-ink-muted leading-[1.6] mb-8">
                {post.data.description}
              </p>
            )}
          </header>
          
          <!-- Contenido del artículo -->
          <div class="prose prose-lg max-w-none font-serif" id="article-content">
            <slot />
          </div>
          
          <!-- Script para agregar IDs a los headings -->
          <script>
            // Agregar IDs a los headings para navegación del TOC
            document.addEventListener('DOMContentLoaded', () => {
              const articleContent = document.getElementById('article-content');
              if (!articleContent) return;
              
              const headings = articleContent.querySelectorAll('h2, h3');
              headings.forEach((heading) => {
                if (!heading.id) {
                  const text = heading.textContent || '';
                  const id = text
                    .toLowerCase()
                    .normalize('NFD')
                    .replace(/[\u0300-\u036f]/g, '')
                    .replace(/[^a-z0-9]+/g, '-')
                    .replace(/^-+|-+$/g, '');
                  heading.id = id;
                }
              });
            });
          </script>
          
        </article>
        
        <!-- Sidebar para TOC -->
        {showTOC && originalPost && (
          <aside class="hidden lg:block w-64 flex-shrink-0">
            <TableOfContents post={originalPost} minHeadings={3} />
          </aside>
        )}
      </div>
    </div>
  </main>


</MainLayout>

<style define:vars={{
  inkBase: Design.theme.color.palette.ink.base,
  inkMuted: Design.theme.color.palette.ink.muted,
  primaryBase: Design.theme.color.palette.primary.base,
  primaryHover: Design.theme.color.palette.primary.hover,
  bgAlt: Design.theme.color.palette.bg.alt,
  borderLight: Design.theme.color.palette.border.light,
  
  spacingSm: `${Design.theme.spacing.scale.sm}px`,
  spacingLg: `${Design.theme.spacing.scale.lg}px`,
  spacingXl: `${Design.theme.spacing.scale.xl}px`,
  spacing2xl: `${Design.theme.spacing.scale["2xl"]}px`,
  spacing3xl: `${Design.theme.spacing.scale["3xl"]}px`,
  
  radiusSm: `${Design.theme.radii.sm}px`,
  radiusMd: `${Design.theme.radii.md}px`,
  radiusLg: `${Design.theme.radii.lg}px`,

  fontSans: Design.theme.typography.families.sans,
  fontSerif: Design.theme.typography.families.serif,
  fontMono: Design.theme.typography.families.mono,

  h1Size: Design.theme.typography.scale.h1.size,
  h1Line: Design.theme.typography.scale.h1.line,
  h1Tracking: `${Design.theme.typography.scale.h1.tracking}em`,
  
  h2Size: Design.theme.typography.scale.h2.size,
  h2Line: Design.theme.typography.scale.h2.line,
  h2Weight: Design.theme.typography.scale.h2.weight,

  h3Size: Design.theme.typography.scale.h3.size,
  h3Line: Design.theme.typography.scale.h3.line,
  h3Weight: Design.theme.typography.scale.h3.weight,

  bodySize: Design.theme.typography.scale.body.size,
  bodyLine: Design.theme.typography.scale.body.line,
  
  smallSize: Design.theme.typography.scale.small.size,

  shadowCard: Design.theme.color.elevation.card,
}}>
  /* Estilos específicos para el blog según Design.json */
  .prose {
    color: var(--inkBase);
    line-height: var(--bodyLine);
    font-family: var(--fontSerif);
  }
  
  .prose :global(h1),
  .prose :global(h2),
  .prose :global(h3),
  .prose :global(h4),
  .prose :global(h5),
  .prose :global(h6) {
    color: var(--inkBase);
    font-weight: 700;
    margin-top: var(--spacing2xl);
    margin-bottom: var(--spacingLg);
  }
  
  .prose :global(h1) {
    font-size: var(--h1Size);
    line-height: var(--h1Line);
    letter-spacing: var(--h1Tracking);
  }
  
  .prose :global(h2) {
    font-size: var(--h2Size);
    line-height: var(--h2Line);
    font-weight: var(--h2Weight);
  }
  
  .prose :global(h3) {
    font-size: var(--h3Size);
    line-height: var(--h3Line);
    font-weight: var(--h3Weight);
  }
  
  .prose :global(p) {
    margin-bottom: var(--spacing2xl);
    color: var(--inkMuted);
    font-size: var(--bodySize);
    line-height: var(--bodyLine);
  }
  
  .prose :global(a) {
    color: var(--primaryBase);
    text-decoration: none;
    transition: color 200ms cubic-bezier(0, 0, 0.2, 1);
  }
  
  .prose :global(a:hover) {
    color: var(--primaryHover);
    text-decoration: underline;
    text-underline-offset: 2px;
  }
  
  .prose :global(blockquote) {
    border-left: 4px solid var(--primaryBase);
    padding-left: var(--spacing3xl);
    margin: var(--spacing2xl) 0;
    font-style: italic;
    color: var(--inkMuted);
  }
  
  .prose :global(code) {
    background-color: var(--bgAlt);
    padding: 0.25rem 0.5rem;
    border-radius: var(--radiusSm);
    font-family: var(--fontMono);
    font-size: 0.875rem;
  }
  
  .prose :global(pre) {
    background-color: var(--bgAlt);
    padding: var(--spacing3xl);
    border-radius: var(--radiusMd);
    overflow-x: auto;
    margin: var(--spacing2xl) 0;
  }
  
  .prose :global(pre code) {
    background: none;
    padding: 0;
  }
  
  .prose :global(ul),
  .prose :global(ol) {
    margin: var(--spacing2xl) 0;
    padding-left: var(--spacing2xl);
  }
  
  .prose :global(li) {
    margin-bottom: var(--spacingSm);
    color: var(--inkMuted);
  }
  
  .prose :global(img) {
    border-radius: var(--radiusLg);
    box-shadow: var(--shadowCard);
    margin: var(--spacing2xl) 0;
  }
  
  .prose :global(table) {
    width: 100%;
    border-collapse: collapse;
    margin: var(--spacing2xl) 0;
  }
  
  .prose :global(th),
  .prose :global(td) {
    border: 1px solid var(--borderLight);
    padding: 0.75rem;
    text-align: left;
  }
  
  .prose :global(th) {
    background-color: var(--bgAlt);
    font-weight: 600;
  }
</style>
