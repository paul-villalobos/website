---
import MainLayout from './MainLayout.astro';
import BlogPostMeta from '../components/BlogPostMeta.astro';
import type { ProcessedPost } from '../utils/blogUtils';
import { 
  generatePostMeta, 
  generatePostStructuredData,
  generateBreadcrumbs,
  generateBreadcrumbStructuredData,
  combineStructuredData
} from '../utils/blogUtils';

// Props específicas del blog
export interface Props {
  post: ProcessedPost;
  showTOC?: boolean;
  includeBreadcrumbs?: boolean;
}

const {
  post,
  showTOC = false,
  includeBreadcrumbs = true
} = Astro.props;

// Generar metadatos SEO
const postMeta = generatePostMeta(post);
const postStructuredData = generatePostStructuredData(post);
const breadcrumbs = includeBreadcrumbs ? generateBreadcrumbs(post) : [];
const breadcrumbStructuredData = includeBreadcrumbs ? generateBreadcrumbStructuredData(breadcrumbs) : null;

// Combinar datos estructurados
const combinedStructuredData = combineStructuredData(
  postStructuredData,
  breadcrumbStructuredData
);
---

<MainLayout
  title={postMeta.title}
  description={postMeta.description}
  keywords={postMeta.keywords}
  canonical={postMeta.canonical}
  ogImage={postMeta.ogImage}
  ogType={postMeta.ogType}
  structuredData={combinedStructuredData}
>

  <!-- Contenido principal -->
  <main class="min-h-screen bg-white">
    <div class="max-w-7xl mx-auto px-5 py-8">
      <div class="flex flex-col lg:flex-row gap-8">
        
        <!-- Contenido del artículo -->
        <article class="flex-1 max-w-4xl mx-auto lg:mx-0">
          
          <!-- Header del artículo -->
          <header class="mb-8">
            <div class="max-w-3xl">
              <!-- Metadatos del post con breadcrumbs -->
              <BlogPostMeta 
                post={post} 
                includeBreadcrumbs={includeBreadcrumbs}
              />
              
              <!-- Título del artículo -->
              <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-gray-900 leading-tight mb-4">
                {post.data.title}
              </h1>
              
              <!-- Descripción -->
              {post.data.description && (
                <p class="text-lg text-gray-600 leading-relaxed mb-6">
                  {post.data.description}
                </p>
              )}
            </div>
          </header>
          
          <!-- Contenido del artículo -->
          <div class="prose prose-lg max-w-none">
            <slot />
          </div>
          
        </article>
      </div>
    </div>
  </main>


</MainLayout>

<style>
  /* Estilos específicos para el blog */
  .prose {
    color: #0E1222;
    line-height: 1.65;
  }
  
  .prose h1,
  .prose h2,
  .prose h3,
  .prose h4,
  .prose h5,
  .prose h6 {
    color: #0E1222;
    font-weight: 700;
    margin-top: 2rem;
    margin-bottom: 1rem;
  }
  
  .prose h1 {
    font-size: 2.25rem;
    line-height: 1.2;
    letter-spacing: -0.01em;
  }
  
  .prose h2 {
    font-size: 1.75rem;
    line-height: 1.25;
  }
  
  .prose h3 {
    font-size: 1.375rem;
    line-height: 1.3;
    font-weight: 600;
  }
  
  .prose p {
    margin-bottom: 1.5rem;
    color: #3F4756;
  }
  
  .prose a {
    color: #0B5FFF;
    text-decoration: none;
    transition: color 0.2s ease;
  }
  
  .prose a:hover {
    color: #084BCC;
    text-decoration: underline;
    text-underline-offset: 2px;
  }
  
  .prose blockquote {
    border-left: 4px solid #0B5FFF;
    padding-left: 1.5rem;
    margin: 2rem 0;
    font-style: italic;
    color: #3F4756;
  }
  
  .prose code {
    background-color: #F7F9FC;
    padding: 0.25rem 0.5rem;
    border-radius: 6px;
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.875rem;
  }
  
  .prose pre {
    background-color: #F7F9FC;
    padding: 1.5rem;
    border-radius: 10px;
    overflow-x: auto;
    margin: 2rem 0;
  }
  
  .prose pre code {
    background: none;
    padding: 0;
  }
  
  .prose ul,
  .prose ol {
    margin: 1.5rem 0;
    padding-left: 2rem;
  }
  
  .prose li {
    margin-bottom: 0.5rem;
    color: #3F4756;
  }
  
  .prose img {
    border-radius: 14px;
    box-shadow: 0 2px 8px rgba(3,7,18,0.06);
    margin: 2rem 0;
  }
  
  .prose table {
    width: 100%;
    border-collapse: collapse;
    margin: 2rem 0;
  }
  
  .prose th,
  .prose td {
    border: 1px solid #E5E7EB;
    padding: 0.75rem;
    text-align: left;
  }
  
  .prose th {
    background-color: #F7F9FC;
    font-weight: 600;
  }
</style>
