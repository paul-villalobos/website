---
import MainLayout from './MainLayout.astro';

// Props específicas del blog
export interface Props {
  title: string;
  description?: string;
  publishDate?: string;
  readingTime?: string;
  author?: string;
  showTOC?: boolean;
}

const {
  title,
  description,
  publishDate,
  readingTime,
  author = "Paul Villalobos",
  showTOC = false
} = Astro.props;
---

<MainLayout>

  <!-- Contenido principal -->
  <main class="min-h-screen bg-white">
    <div class="max-w-7xl mx-auto px-5 py-8">
      <div class="flex flex-col lg:flex-row gap-8">
        
        <!-- Contenido del artículo -->
        <article class="flex-1 max-w-4xl mx-auto lg:mx-0">
          
          <!-- Header del artículo -->
          <header class="mb-8">
            <div class="max-w-3xl">
              <!-- Breadcrumbs -->
              <nav class="mb-4" aria-label="Breadcrumb">
                <ol class="flex items-center space-x-2 text-sm text-gray-500">
                  <li><a href="/" class="hover:text-gray-700">Inicio</a></li>
                  <li class="flex items-center">
                    <svg class="w-4 h-4 mx-2" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
                    </svg>
                    <a href="/blog" class="hover:text-gray-700">Blog</a>
                  </li>
                  <li class="flex items-center">
                    <svg class="w-4 h-4 mx-2" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
                    </svg>
                    <span class="text-gray-900">{title}</span>
                  </li>
                </ol>
              </nav>
              
              <!-- Título del artículo -->
              <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-gray-900 leading-tight mb-4">
                {title}
              </h1>
              
              <!-- Descripción -->
              {description && (
                <p class="text-lg text-gray-600 leading-relaxed mb-6">
                  {description}
                </p>
              )}
              
              <!-- Metadatos -->
              <div class="flex flex-wrap items-center gap-4 text-sm text-gray-500">
                {publishDate && (
                  <div class="flex items-center">
                    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                    </svg>
                    {publishDate}
                  </div>
                )}
                
                {readingTime && (
                  <div class="flex items-center">
                    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                    {readingTime}
                  </div>
                )}
                
                <div class="flex items-center">
                  <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                  </svg>
                  {author}
                </div>
              </div>
            </div>
          </header>
          
          <!-- Contenido del artículo -->
          <div class="prose prose-lg max-w-none">
            <slot />
          </div>
          
        </article>
        
        <!-- Sidebar con TOC (solo en desktop y cuando se necesite) -->
        {showTOC && (
          <aside class="hidden lg:block w-64 flex-shrink-0">
            <div class="sticky top-24">
              <div class="bg-gray-50 rounded-lg p-6">
                <h3 class="text-sm font-semibold text-gray-900 uppercase tracking-wide mb-4">
                  Tabla de contenidos
                </h3>
                <nav class="space-y-2">
                  <!-- TOC se generará dinámicamente -->
                  <div class="text-sm text-gray-600">
                    Los enlaces de la tabla de contenidos se generarán automáticamente basándose en los headings del artículo.
                  </div>
                </nav>
              </div>
            </div>
          </aside>
        )}
        
      </div>
    </div>
  </main>


</MainLayout>

<style>
  /* Estilos específicos para el blog */
  .prose {
    color: #0E1222;
    line-height: 1.65;
  }
  
  .prose h1,
  .prose h2,
  .prose h3,
  .prose h4,
  .prose h5,
  .prose h6 {
    color: #0E1222;
    font-weight: 700;
    margin-top: 2rem;
    margin-bottom: 1rem;
  }
  
  .prose h1 {
    font-size: 2.25rem;
    line-height: 1.2;
    letter-spacing: -0.01em;
  }
  
  .prose h2 {
    font-size: 1.75rem;
    line-height: 1.25;
  }
  
  .prose h3 {
    font-size: 1.375rem;
    line-height: 1.3;
    font-weight: 600;
  }
  
  .prose p {
    margin-bottom: 1.5rem;
    color: #3F4756;
  }
  
  .prose a {
    color: #0B5FFF;
    text-decoration: none;
    transition: color 0.2s ease;
  }
  
  .prose a:hover {
    color: #084BCC;
    text-decoration: underline;
    text-underline-offset: 2px;
  }
  
  .prose blockquote {
    border-left: 4px solid #0B5FFF;
    padding-left: 1.5rem;
    margin: 2rem 0;
    font-style: italic;
    color: #3F4756;
  }
  
  .prose code {
    background-color: #F7F9FC;
    padding: 0.25rem 0.5rem;
    border-radius: 6px;
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.875rem;
  }
  
  .prose pre {
    background-color: #F7F9FC;
    padding: 1.5rem;
    border-radius: 10px;
    overflow-x: auto;
    margin: 2rem 0;
  }
  
  .prose pre code {
    background: none;
    padding: 0;
  }
  
  .prose ul,
  .prose ol {
    margin: 1.5rem 0;
    padding-left: 2rem;
  }
  
  .prose li {
    margin-bottom: 0.5rem;
    color: #3F4756;
  }
  
  .prose img {
    border-radius: 14px;
    box-shadow: 0 2px 8px rgba(3,7,18,0.06);
    margin: 2rem 0;
  }
  
  .prose table {
    width: 100%;
    border-collapse: collapse;
    margin: 2rem 0;
  }
  
  .prose th,
  .prose td {
    border: 1px solid #E5E7EB;
    padding: 0.75rem;
    text-align: left;
  }
  
  .prose th {
    background-color: #F7F9FC;
    font-weight: 600;
  }
</style>
