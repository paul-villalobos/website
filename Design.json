{
  "$schema": "https://example.com/design-system.schema.json",
  "meta": {
    "name": "pv-personal-site",
    "description": "Semantic design profile for a clean, professional B2B/AI consulting website inspired by pamdidner.com (visual style only; no site content).",
    "version": "1.0.0",
    "principles": [
      "Clarity over decoration",
      "High-contrast typography on generous whitespace",
      "Subtle motion for affordance (not spectacle)",
      "Content-first cards and scannable layouts",
      "Mobile-first, progressive enhancement"
    ]
  },

  "theme": {
    "color": {
      "palette": {
        "bg": { "base": "#FFFFFF", "alt": "#F7F9FC" },
        "ink": { "base": "#0E1222", "muted": "#3F4756", "subtle": "#6B7280" },
        "primary": {
          "base": "#0B5FFF",
          "hover": "#084BCC",
          "soft": "rgba(11,95,255,0.10)"
        },
        "secondary": {
          "base": "#0FA3B1",
          "hover": "#0C7F8A",
          "soft": "rgba(15,163,177,0.12)"
        },
        "accent": {
          "base": "#F59E0B",
          "hover": "#C47D08",
          "soft": "rgba(245,158,11,0.12)"
        },
        "success": { "base": "#16A34A" },
        "warning": { "base": "#F59E0B" },
        "danger": { "base": "#DC2626" },
        "border": { "light": "#E5E7EB", "mid": "#D1D5DB", "dark": "#9CA3AF" }
      },
      "elevation": {
        "card": "0 2px 8px rgba(3,7,18,0.06)",
        "panel": "0 8px 24px rgba(3,7,18,0.08)",
        "modal": "0 12px 32px rgba(3,7,18,0.14)"
      },
      "usage": {
        "link": {
          "fg": "{color.palette.primary.base}",
          "hover": "{color.palette.primary.hover}"
        },
        "cta": { "bg": "{color.palette.primary.base}", "fg": "#FFFFFF" },
        "ctaAlt": { "bg": "{color.palette.secondary.base}", "fg": "#FFFFFF" },
        "chip": {
          "bg": "{color.palette.primary.soft}",
          "fg": "{color.palette.primary.base}"
        },
        "tag": {
          "bg": "{color.palette.bg.alt}",
          "fg": "{color.palette.ink.muted}"
        },
        "selection": { "bg": "rgba(11,95,255,0.16)" }
      }
    },

    "typography": {
      "families": {
        "sans": "Inter, ui-sans-serif, system-ui, -apple-system, Segoe UI, Roboto, Helvetica, Arial, 'Noto Sans', 'Apple Color Emoji', 'Segoe UI Emoji'",
        "serif": "Merriweather, ui-serif, Georgia, Cambria, 'Times New Roman', Times, serif",
        "mono": "JetBrains Mono, ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, 'Liberation Mono', 'Courier New', monospace"
      },
      "scale": {
        "display": {
          "size": "clamp(2.25rem, 3vw + 1rem, 3.25rem)",
          "weight": 700,
          "line": 1.1,
          "tracking": -0.01
        },
        "h1": {
          "size": "2.25rem",
          "weight": 700,
          "line": 1.2,
          "tracking": -0.01
        },
        "h2": { "size": "1.75rem", "weight": 700, "line": 1.25 },
        "h3": { "size": "1.375rem", "weight": 600, "line": 1.3 },
        "lead": { "size": "1.125rem", "weight": 400, "line": 1.6 },
        "body": { "size": "1rem", "weight": 400, "line": 1.65 },
        "small": { "size": "0.875rem", "weight": 400, "line": 1.5 },
        "eyebrow": {
          "size": "0.75rem",
          "weight": 700,
          "transform": "uppercase",
          "tracking": 0.12
        }
      }
    },

    "spacing": {
      "unit": 4,
      "scale": {
        "xs": 4,
        "sm": 8,
        "md": 12,
        "lg": 16,
        "xl": 24,
        "2xl": 32,
        "3xl": 48,
        "4xl": 64,
        "5xl": 96
      }
    },

    "radii": {
      "sm": 6,
      "md": 10,
      "lg": 14,
      "xl": 20,
      "pill": 999
    },

    "grid": {
      "container": { "max": 1200, "paddingX": 20 },
      "columns": 12,
      "gutter": 24,
      "breakpoints": {
        "xs": 0,
        "sm": 480,
        "md": 768,
        "lg": 1024,
        "xl": 1280
      }
    },

    "motion": {
      "duration": { "fast": 120, "base": 200, "slow": 320 },
      "easing": {
        "in": "cubic-bezier(0.4, 0, 1, 1)",
        "out": "cubic-bezier(0.0, 0, 0.2, 1)",
        "inOut": "cubic-bezier(0.4, 0, 0.2, 1)"
      }
    },

    "accessibility": {
      "minContrast": "AA",
      "focusRing": { "width": 2, "style": "solid", "color": "#0B5FFF" },
      "hitAreaMin": { "w": 44, "h": 44 }
    }
  },

  "components": {
    "nav": {
      "height": 72,
      "style": {
        "bg": "{color.palette.bg.base}",
        "borderBottom": "{color.palette.border.light}",
        "sticky": true
      },
      "logo": { "height": 28, "lockup": "wordmark-left" },
      "link": {
        "typo": "body",
        "color": "{color.palette.ink.muted}",
        "hover": "{color.palette.ink.base}",
        "activeBar": { "height": 2, "color": "{color.palette.primary.base}" }
      },
      "cta": {
        "variant": "solid",
        "bg": "{color.palette.primary.base}",
        "fg": "#FFFFFF",
        "radius": "{theme.radii.pill}",
        "paddingY": 10,
        "paddingX": 16
      },
      "mobile": {
        "breakpoint": "md",
        "drawer": {
          "width": "100vw",
          "bg": "{color.palette.bg.base}",
          "backdrop": "rgba(15,23,42,0.35)"
        }
      }
    },

    "hero": {
      "type": "split",
      "layout": { "align": "center-left", "minH": 560 },
      "media": {
        "ratio": "16/9",
        "treatment": "soft-shadow",
        "corner": "{theme.radii.lg}"
      },
      "eyebrow": { "use": true, "color": "{color.palette.primary.base}" },
      "title": { "typo": "display", "maxW": 820 },
      "subtitle": {
        "typo": "lead",
        "maxW": 720,
        "color": "{color.palette.ink.muted}"
      },
      "ctas": [
        { "variant": "primary", "labelToken": "cta.primary" },
        { "variant": "ghost", "labelToken": "cta.secondary" }
      ]
    },

    "section": {
      "padY": "{theme.spacing.scale.4xl}",
      "heading": { "typo": "h2", "align": "left" },
      "intro": { "typo": "lead", "color": "{color.palette.ink.muted}" }
    },

    "card": {
      "bg": "#FFFFFF",
      "border": "{color.palette.border.light}",
      "radius": "{theme.radii.lg}",
      "shadow": "{theme.color.elevation.card}",
      "pad": "{theme.spacing.scale.xl}",
      "title": { "typo": "h3" },
      "body": { "typo": "body", "color": "{color.palette.ink.muted}" },
      "hover": { "translateY": -2, "shadow": "{theme.color.elevation.panel}" }
    },

    "button": {
      "sizes": {
        "sm": { "px": 14, "py": 8, "typo": "small" },
        "md": { "px": 18, "py": 12, "typo": "body" },
        "lg": { "px": 22, "py": 14, "typo": "lead" }
      },
      "variants": {
        "primary": {
          "bg": "{color.palette.primary.base}",
          "fg": "#FFFFFF",
          "hoverBg": "{color.palette.primary.hover}"
        },
        "secondary": {
          "bg": "{color.palette.secondary.base}",
          "fg": "#FFFFFF",
          "hoverBg": "{color.palette.secondary.hover}"
        },
        "ghost": {
          "bg": "transparent",
          "fg": "{color.palette.ink.base}",
          "border": "{color.palette.border.mid}",
          "hoverBg": "{color.palette.primary.soft}"
        },
        "link": { "bg": "transparent", "fg": "{color.palette.primary.base}" }
      },
      "radius": "{theme.radii.pill}"
    },

    "badge": {
      "radius": "{theme.radii.pill}",
      "padX": 10,
      "padY": 6,
      "variants": {
        "info": {
          "bg": "{color.palette.primary.soft}",
          "fg": "{color.palette.primary.base}"
        },
        "teal": {
          "bg": "{color.palette.secondary.soft}",
          "fg": "{color.palette.secondary.base}"
        },
        "amber": {
          "bg": "{color.palette.accent.soft}",
          "fg": "{color.palette.accent.base}"
        }
      }
    },

    "featureList": {
      "layout": "grid-3",
      "iconStyle": "outline",
      "iconColor": "{color.palette.primary.base}",
      "titleTypos": "h3",
      "descTypos": "body"
    },

    "testimonial": {
      "variant": "card",
      "quoteMark": true,
      "author": { "avatar": true, "role": true },
      "bg": "{color.palette.bg.base}",
      "accentBar": "{color.palette.primary.base}"
    },

    "blogCard": {
      "media": { "ratio": "16/9", "corner": "{theme.radii.md}" },
      "title": { "typo": "h3" },
      "meta": { "typo": "small", "color": "{color.palette.ink.subtle}" },
      "excerpt": { "typo": "body", "maxLines": 3 },
      "tag": { "use": true, "variant": "info" }
    },

    "ctaStripe": {
      "bg": "{color.palette.bg.alt}",
      "title": { "typo": "h2" },
      "desc": { "typo": "lead", "color": "{color.palette.ink.muted}" },
      "button": { "variant": "primary" }
    },

    "form": {
      "field": {
        "height": 44,
        "radius": "{theme.radii.md}",
        "border": "{color.palette.border.mid}",
        "focusBorder": "{color.palette.primary.base}",
        "labelTypos": "small",
        "helpTypos": "small"
      },
      "validation": {
        "error": { "color": "{color.palette.danger.base}" },
        "success": { "color": "{color.palette.success.base}" }
      }
    },

    "footer": {
      "style": {
        "bg": "#0B1220",
        "fg": "#E5E7EB",
        "link": "#CBD5E1",
        "borderTop": "transparent"
      },
      "columns": 4,
      "newsletter": { "use": true, "inputWidth": 340 },
      "legal": { "typo": "small", "divider": "{color.palette.border.dark}" }
    }
  },

  "layouts": {
    "home": {
      "sections": [
        { "id": "hero", "component": "hero" },
        {
          "id": "intro",
          "component": "section",
          "headingToken": "home.intro.heading"
        },
        {
          "id": "services",
          "component": "section",
          "layout": "cards-3",
          "card": "card"
        },
        { "id": "outcomes", "component": "section", "layout": "split-list" },
        { "id": "testimonials", "component": "section", "layout": "carousel" },
        {
          "id": "insights",
          "component": "section",
          "layout": "grid-3",
          "card": "blogCard"
        },
        { "id": "cta", "component": "ctaStripe" }
      ]
    },
    "article": {
      "maxW": 800,
      "typo": "serif",
      "header": { "showReadingTime": true, "showDate": true },
      "toc": { "sticky": true, "minHeadings": 3 }
    },
    "listing": {
      "grid": { "columns": { "xs": 1, "md": 2, "lg": 3 }, "gap": 24 },
      "filters": { "tags": true, "search": true }
    }
  },

  "tokens": {
    "cta": {
      "primary": "Hablemos",
      "secondary": "Ver método de trabajo"
    },
    "aria": {
      "skipToContent": "Saltar al contenido principal",
      "menu": "Abrir menú",
      "close": "Cerrar"
    },
    "placeholders": {
      "heroTitle": "Título claro de propuesta de valor",
      "heroSubtitle": "Subtítulo breve y orientado a beneficios",
      "serviceTitle": "Nombre del servicio",
      "serviceDesc": "Descripción concisa del servicio",
      "testimonial": "Cita breve y creíble",
      "blogTitle": "Título de idea o artículo",
      "blogExcerpt": "Resumen de 2–3 líneas"
    }
  },

  "patterns": {
    "linkTreatment": {
      "underlineOnHover": true,
      "underlineOffset": 2,
      "transition": "{theme.motion.duration.base}ms {theme.motion.easing.out}"
    },
    "cardHover": {
      "elevate": true,
      "shadow": "{theme.color.elevation.panel}",
      "translateY": -2
    },
    "sectionIntro": {
      "eyebrow": {
        "use": true,
        "typo": "eyebrow",
        "color": "{color.palette.secondary.base}"
      },
      "kickerDivider": true
    },
    "emptyState": {
      "icon": "outline-info",
      "titleTypos": "h3",
      "descTypos": "body",
      "actions": ["primary", "ghost"]
    }
  },

  "contentGuidelines": {
    "voice": [
      "Profesional y cercano",
      "Enfocado en beneficios de negocio",
      "Lenguaje simple; evitar jerga innecesaria"
    ],
    "microcopy": [
      "Titulares accionables (verbos fuertes)",
      "CTA con verbo + resultado",
      "Metadescripciones entre 140–160 caracteres"
    ],
    "images": {
      "style": "fotografía realista de contextos profesionales; fondos claros; cero clichés de robots/IA genéricos",
      "treatment": "bordes redondeados, sombra sutil, espacios amplios",
      "aspectRatios": ["16/9", "4/3", "1/1"]
    },
    "icons": {
      "set": "outline",
      "stroke": 1.5,
      "corner": "rounded"
    },
    "seo": {
      "h1PerPage": true,
      "h2ForSections": true,
      "maxH2PerPage": 8,
      "slugCase": "kebab",
      "internalLinking": "2–3 enlaces por sección cuando sea natural"
    }
  },

  "dev": {
    "cssVars": true,
    "prefix": "--pv",
    "exampleVars": {
      "--pv-bg": "{color.palette.bg.base}",
      "--pv-ink": "{color.palette.ink.base}",
      "--pv-primary": "{color.palette.primary.base}",
      "--pv-radius": "{theme.radii.md}px",
      "--pv-gap": "{theme.spacing.scale.xl}px"
    },
    "containerQueries": true,
    "prefersColorScheme": {
      "darkMode": {
        "bg": "#0B0F1A",
        "ink": "#F3F4F6",
        "muted": "#C7CEDB",
        "cardBg": "#121827",
        "border": "#243044",
        "primary": "#7CADFF",
        "secondary": "#5CD3DF",
        "accent": "#F5C572"
      }
    },
    "performance": {
      "fontLoading": "swap",
      "imgPolicy": "responsive, lazy, width-descriptor srcset",
      "criticalCss": true
    }
  }
}
